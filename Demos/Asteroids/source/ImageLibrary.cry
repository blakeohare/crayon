import Graphics2D;
import Images;

class ImageLibrary {
    static field images = {};
    static field imageSheet = null;

    constructor() { }

    static function get(path) {
        img = ImageLibrary.images.get(path);
        if (img == null) {
            img = Bitmap.fromResource('images/' + path);
            ImageLibrary.images[path] = img;
        }
        return img;
    }
}
