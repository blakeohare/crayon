import CrayonUnit;

class TestForEach : Test {

    constructor() : base() { }

    function testBasic() {
        nums = [1, 2, 3, 4, 5];
        x = 0;
        for (num : nums) {
            x += num;
        }
        assertThat(x).isEqualTo(15);
    }

    function testAppendToListDuringIteration() {
        nums = [1, 2, 3, 4, 5];
        x = 0;
        for (num : nums) {
            if (x == 3) nums.add(100);
            x += num;
        }
        assertThat(x).isEqualTo(115);
    }

    function testRemoveElementDuringIteration() {
        nums = [1, 2, 3, 4, 5];
        x = 0;
        for (num : nums)  {
            if (x == 3) nums.remove(4);
            x += num;
        }
        assertThat(x).isEqualTo(10);
    }
}
