/*
    Sets the size of the recording

    args[0]: GIF Context
    args[1]: width
    args[2]: height
*/
Value lib_gamegifcap_setRecordSize(VmContext vm, Array<Value> args) {
    ObjectInstance oi = (ObjectInstance) args[0].internalValue;
    int w = (int)args[1].internalValue;
    int h = (int)args[2].internalValue;
    Native._lib_gamegifcap_setRecordSize(oi.nativeData[0], w, h);
    return vm.globalNull;
}
