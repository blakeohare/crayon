namespace U3Direct {

    enum WindowMode {
        GRAPHICS,
        UI,
    }

    class U3Window {
        field _bridge = null;

        constructor() { }

        function show() {
            this._bridge = new U3Bridge();
            this._bridge.start();
            return this;
        }

        function sendMessage(items) {
            this._bridge.send(items);
            return this;
        }

        function close() {
            this._bridge.close();
        }
    }
}
