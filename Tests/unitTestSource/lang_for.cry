import CrayonUnit;

class TestForLoop : Test {

    constructor() : base() { }

    function testBasic() {
        x = 0;
        for (i = 0; i < 5; ++i) {
            x += i;
        }
        assertThat(x).isEqualTo(10);
    }

    function testEmptyInitAndStep() {
        x = 0;
        i = 0;
        for (; ++i < 5;) {
            x += i;
        }
        assertThat(x).isEqualTo(10);
    }

    function testEmptyWithBreak() {
        x = 0;
        i = 0;
        for (;;) {
            x += i++;
            if (i == 5) break;
        }
        assertThat(x).isEqualTo(10);
    }

    function testContinue() {
        x = 0;
        for (i = 0; i < 10; ++i) {
            if (i % 2 == 0) {
                continue;
            }
            x += i;
        }
        assertThat(x).isEqualTo(25);
    }
}
